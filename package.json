{
  "name": "java-refactoring-analyzer",
  "displayName": "Java Refactoring Analyzer",
  "description": "Analyzes Java code structure to maximize classes and minimize LOC/method with real-time decorations",
  "version": "2.0.0",
  "publisher": "hjstephan86",
  "author": {
    "name": "Stephan Epp"
  },
  "license": "LICENSE",
  "repository": {
    "type": "git",
    "url": "https://github.com/hjstephan/refactorings"
  },
  "bugs": {
    "url": "https://github.com/hjstephan/refactorings/issues"
  },
  "homepage": "https://github.com/hjstephan/refactorings#readme",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "java",
    "refactoring",
    "code quality",
    "metrics",
    "linting"
  ],
  "readme": "README.md",
  "activationEvents": [
    "onLanguage:java"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "java-refactoring-analyzer.analyze",
        "title": "Analyze Java Refactoring Metrics"
      },
      {
        "command": "java-refactoring-analyzer.toggleDecorations",
        "title": "Toggle Real-time Decorations"
      }
    ],
    "keybindings": [
      {
        "command": "java-refactoring-analyzer.analyze",
        "key": "ctrl+alt+r",
        "mac": "cmd+alt+r",
        "when": "editorLangId == java"
      }
    ],
    "configuration": {
      "title": "Java Refactoring Analyzer",
      "properties": {
        "javaRefactoringAnalyzer.enableRealTimeDecorations": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time LOC and method count decorations"
        },
        "javaRefactoringAnalyzer.methodLocThreshold": {
          "type": "number",
          "default": 10,
          "description": "LOC threshold for method warnings (yellow when exceeded)"
        },
        "javaRefactoringAnalyzer.classMethodThreshold": {
          "type": "number",
          "default": 10,
          "description": "Method count threshold for class warnings"
        }
      }
    }
  },
  "dependencies": {
    "java-parser": "^2.0.0"
  },
  "devDependencies": {
    "@vscode/test-electron": "^2.3.8",
    "mocha": "^10.8.2",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "sinon": "^17.0.1"
  },
  "scripts": {
    "test": "mocha tests/unit/**/*.test.js",
    "test-integration": "vscode-test",
    "test-coverage": "nyc --reporter=lcov --reporter=text mocha --ui tdd tests/unit/**/*.test.js"
  },
  "nyc": {
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "exclude": [
      "tests/**",
      "coverage/**",
      "node_modules/**"
    ],
    "all": true,
    "check-coverage": true,
    "lines": 80,
    "functions": 80,
    "branches": 80
  }
}
